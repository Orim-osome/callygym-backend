// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  //previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  date      DateTime @default(now())   // when booking was made
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
 createdAt DateTime @default(now())
}

model FreeTrial {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("free_trials")
}